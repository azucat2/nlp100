#-*- coding: utf-8 -*-

str = 'Hi He Lied Because Boron Could Not Oxidize Fluorine. New Nations Might Also Sign Peace Security Clause. Arthur King Can.'
words = str.split(' ')

words_dict = {}
i = 0
for word in words:
    if i == (1 or 5 or 6 or 7 or 8 or 9 or 15 or 16 or 19):
        words_dict[word[:1]] = i
    else:
        words_dict[word[:2]] = i
    i += 1

print (words_dict)
